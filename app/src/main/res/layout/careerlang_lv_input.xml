<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom1"
        android:elevation="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView48"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/dalseo"
            android:text="언어구분"
            android:textColor="#000000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/lang_kind"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/dalseo"
            android:gravity="center|start"
            android:hint="언어를 등록해주세요"
            android:inputType="textPersonName"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom1"
        android:elevation="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView51"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/dalseo"
            android:text="시험명"
            android:textColor="#000000"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/lang_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_search" />

        <TextView
            android:id="@+id/lang_test"
            android:layout_width="197dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/dalseo"
            android:gravity="center_vertical"
            android:hint="시험명을 등록해주세요"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom1"
        android:elevation="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView55"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/dalseo"
            android:text="점수(등급)"
            android:textColor="#000000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/lang_score"
            android:layout_width="236dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/dalseo"
            android:gravity="center|start"
            android:hint="점수(등급)을 등록해주세요"
            android:inputType="textPersonName"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom1"
        android:elevation="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView52"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/dalseo"
            android:text="취득일자"
            android:textColor="#000000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/lang_date"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/dalseo"
            android:gravity="center|start"
            android:hint="취득일자를 등록해주세요"
            android:inputType="textPersonName"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/certCal"
            android:layout_width="46dp"
            android:layout_height="50dp"
            android:contentDescription="달력 이미지"
            android:onClick="showDatePicker"
            app:srcCompat="@android:drawable/ic_menu_my_calendar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/btn_lang_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/custom_button"

            android:backgroundTint="#263BF4"
            android:elevation="20dp"
            android:fontFamily="@font/dalseo"
            android:gravity="center"
            android:text="확인"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>