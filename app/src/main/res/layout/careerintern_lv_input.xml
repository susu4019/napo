<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/coner"
    android:elevation="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:background="@drawable/custom1"
            android:elevation="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/awardsnameText"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/dalseo"
                android:text="활동기관명"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/internName"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/dalseo"
                android:hint="회사/기관/단체명"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom1"
            android:elevation="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView54"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/dalseo"
                android:text="활동기간"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/internPer"
                android:layout_width="168dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/dalseo"
                android:hint="활동기간을 입력하세요"
                android:inputType="textPersonName" />

            <ImageButton
                android:id="@+id/internCal"
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:contentDescription="달력 이미지"
                android:onClick="showDatePicker"
                app:srcCompat="@android:drawable/ic_menu_my_calendar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0"
            android:background="@drawable/custom1"
            android:elevation="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/awardsdateText"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/dalseo"
                android:text="활동내용"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/internAct"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/dalseo"
                android:gravity="start|top"
                android:hint="활동내용을 입력하세요"
                android:inputType="textMultiLine" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:background="@drawable/custom1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button

                android:id="@+id/btn_intern_plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_button"

                android:backgroundTint="#263BF4"
                android:elevation="20dp"
                android:fontFamily="@font/dalseo"
                android:gravity="center"
                android:text="확인"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>